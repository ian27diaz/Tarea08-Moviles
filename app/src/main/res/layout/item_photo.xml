<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_photo_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:text="Ian27Diaz"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_photo_threepoints"
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/item_photo_main_image_iv"
        android:src="@drawable/ic_threepoints"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_photo_main_image_iv"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:scaleType="centerCrop"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/item_photo_username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_launcher_background"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_photo_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/item_photo_main_image_iv"
        android:src="@drawable/ic_favorite"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_photo_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/item_photo_main_image_iv"
        app:layout_constraintLeft_toRightOf="@id/item_photo_like"
        android:src="@drawable/ic_chat"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_photo_likes_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/item_photo_main_image_iv"
        app:layout_constraintLeft_toRightOf="@id/item_photo_comment"
        tools:text="270 likes"/>
</androidx.constraintlayout.widget.ConstraintLayout>